stretch(top = 0, left = 0, right = 0, bottom = 0)
  position absolute
  top top
  left left
  right right
  bottom bottom

animate(name, duration, timing = linear, iteration = infinite)
  -webkit-animation-name: name
  -moz-animation-name: name
  animation-name: name

  -webkit-animation-duration: duration;
  -moz-animation-duration: duration;
  animation-duration: duration;

  -webkit-animation-timing-function: timing;
  -moz-animation-timing-function: timing;
  animation-timing-function: timing;

  -webkit-animation-iteration-count: iteration;
  -moz-animation-iteration-count: iteration;
  animation-iteration-count: iteration;

@font-face {
  font-family: NokiaCellphone;
  src: url(./fonts/nokiafc22.ttf);
  font-weight: 300;
}

html {
  background: black;
  color: white;
}

body {
  padding: 0;
  font: 16px NokiaCellphone, Monaco, monospace;
  -webkit-font-smoothing: none;
  font-smooth: never;
  width: 640px;
  margin: 0 auto;
}

h1 {
  font-size: 32px;
  font-weight: 300;
}

#wrapper {
  position: relative;
  height: 460px;
  background: #1a1d1f;
}

#content
  height 460px
  width inherit

#debug
  stretch(top: auto)
  width 640px
  margin 0 auto

#message {
  stretch(top: 100%, bottom: auto)
  color #333
  background #ddd
  padding: 14px;
}

#messagehitbox
  stretch()
  z-index 1

#continue {
  float right
  color: #888;
  font-size: 8px;
}

p {
  margin: 0;
}

.hidden {
  display: none;
}

#newname {
  width: 75%;
  margin: 10px auto;
  display: block;
  padding: 10px;
  font: 24px NokiaCellphone, Monaco, monospace;
  -webkit-font-smoothing: none;
  font-smooth: never;
  text-align: center;
  color: #333;
  border: none;
}

#nameinsert {
