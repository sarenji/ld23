.stars {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: url(../images/stars.gif) repeat;
}

@-webkit-keyframes fromtop {
  0% {
    background-position: 0% 0%;
  }
  100% {
    background-position: 0 -459px;
  }
}

@keyframes bounce
  0%
    margin-top 0px
  25%
    margin-top 4px
  50%
    margin-top 8px
  75%
    margin-top 4px
  100%
    margin-top 0px

