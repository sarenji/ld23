.stars {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: url(../images/stars.gif) repeat;
}

@-webkit-keyframes fromtop {
  0% {
    background-position: 0% 0%;
  }
  100% {
    background-position: 0 -459px;
  }
}

@keyframes bounce
  0%
    margin-top 0px
  25%
    margin-top 2px
  50%
    margin-top 4px
  75%
    margin-top 2px
  100%
    margin-top 0px

.stars
  animate: fromtop, 20s, linear

.earth
  animate: bounce, 2s, ease
  position absolute
  top 35%
  left 50%
  width 32px
  height 32px
  background url(../images/earth.gif)

.ggcomp
  background: url(../images/ggcomp.gif)
  stretch()

.gghouse
  background: url(../images/gghouse.gif)
  stretch()

